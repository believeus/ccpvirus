<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <androidx.percentlayout.widget.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="20dp">]

        <RelativeLayout
            android:layout_width="61dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            app:layout_widthPercent="20%">

            <ImageView
                android:id="@+id/imgView"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:src="@drawable/min" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            app:layout_widthPercent="80%">

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="40dp"
                android:gravity="center"
                android:text="@string/textTitle"
                android:textColor="#D40A0707"
                android:textSize="28dp" />
        </RelativeLayout>

    </androidx.percentlayout.widget.PercentRelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="301dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textSeleAssay"
            android:layout_width="381dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/textSeleAssay"
            android:textColor="#D4160A0A"
            android:textSize="22dp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="330dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/my_spinner"
            android:entries="@array/spnner"
            android:spinnerMode="dropdown"
            android:dropDownVerticalOffset="45dp"
            />

        <TextView
            android:id="@+id/TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:text="@string/textNameTlg"
            android:textColor="#D4160303"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/plainPleaseEN"
            android:layout_width="330dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:autofillHints=""
            android:background="@drawable/my_text"
            android:ems="10"
            android:hint="@string/plainPleaseEN"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:textColor="#99140F0F"
            android:textColorHint="#991A0808" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="18dp"
            android:text="@string/textDataAD"
            android:textColor="#D40C0404"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/enditAutoDe"
            android:layout_width="330dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/my_text"
            android:ems="10"
            android:hint="@string/enditAutoDe"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:textColor="#99140F0F"
            android:textColorHint="#991A0808" />

    </LinearLayout>

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_widthPercent="50%">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="#1D0F0606"
                android:text="@string/btnCancel"
                android:textAllCaps="false"
                android:textColor="#B31D0505"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:gravity="center|left"
            android:orientation="horizontal"
            app:layout_widthPercent="30%">

            <Button
                android:id="@+id/btnNext"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#BF2196F3"
                android:text="@string/btnNext"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </RelativeLayout>

    </androidx.percentlayout.widget.PercentRelativeLayout>
</LinearLayout>