<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <tech.huqi.smartopencv.core.preview.CameraPreview
            android:id="@+id/javaCameraView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:camera_id="any"
            app:show_fps="false" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#000000"
            android:paddingTop="5dp">
            <com.beijingepidial.ccpvirus.LevelView
                android:id="@+id/gv_hv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                app:bubbleColor="#e03524"
                app:bubbleRadius="10dp"
                app:bubbleRuleColor="#ffffff"
                app:bubbleRuleRadius="12dp"
                app:bubbleRuleWidth="1dp"
                app:limitCircleWidth="3dp"
                app:limitColor="#e03524"
                app:limitRadius="20dp"
                app:horizontalColor="#00ff00"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:padding="5dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5">
                    <TextView
                        android:id="@+id/tvv_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"
                        android:text="vert"
                        android:textColor="#fff"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tvl_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvv_vertical"
                        android:layout_centerHorizontal="true"
                        android:text="@string/vertical"
                        android:gravity="center_horizontal"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="10sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_weight="0.5">
                    <TextView
                        android:id="@+id/tvv_horz"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"
                        android:text="horiz"
                        android:textColor="#fff"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/tvl_horz"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvv_horz"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"
                        android:text="@string/horizontal"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="10sp" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="PICK-SIZE:"/>
            <TextView
                android:id="@+id/tvPicksize"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:textSize="14dp"
                android:inputType="number"
                android:layout_gravity="center"
                android:enabled="false"
                android:gravity="center" />
            <Button
                android:id="@+id/btnPause"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="100dp"
                android:textSize="10dp"
                android:layout_height="35dp"
                android:text="Pause" />
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="SCAN-SIZE:"/>
            <EditText
                android:id="@+id/etScansize"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:textSize="14dp"
                android:inputType="number"
                android:layout_gravity="center"
                android:gravity="center" />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvmsg"
                        android:background="@drawable/plate_border"
                        android:padding="8dp"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/tvradius"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Circle radius:10~25"/>
                    <com.innovattic.rangeseekbar.RangeSeekBar
                        android:id="@+id/sbarRadius"
                        android:background="@color/rsb_trackDefaultColor"
                        app:rsb_trackColor="#000000"
                        app:rsb_trackSelectedColor="#0071bc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:rsb_minRange="8"
                        app:rsb_sidePadding="10dp"
                        app:rsb_initialMinThumbValue="10"
                        app:rsb_initialMaxThumbValue="25"
                        app:rsb_max="50"/>
                </LinearLayout>

                <androidx.percentlayout.widget.PercentFrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <androidx.percentlayout.widget.PercentRelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_widthPercent="100%"
                        app:layout_heightPercent="100%">
                        <Button
                            android:id="@+id/btnCatchColor"
                            android:enabled="false"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_widthPercent="50%"
                            app:layout_heightPercent="100%"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:text="@string/catch_color" />
                        <Button
                            android:id="@+id/btnReTake"
                            android:enabled="false"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_widthPercent="50%"
                            app:layout_heightPercent="100%"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:text="@string/retake" />
                    </androidx.percentlayout.widget.PercentRelativeLayout>
                </androidx.percentlayout.widget.PercentFrameLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.percentlayout.widget.PercentRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp">
                        <TextView
                            app:layout_heightPercent="100%"
                            app:layout_widthPercent="50%"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="Before Color"/>
                        <TextView
                            app:layout_heightPercent="100%"
                            app:layout_widthPercent="50%"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:text="After Color"/>
                    </androidx.percentlayout.widget.PercentRelativeLayout>
                    <androidx.percentlayout.widget.PercentRelativeLayout
                        android:id="@+id/LayoutColorPal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">
                        <LinearLayout
                            android:layout_below="@+id/tvColorPal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_widthPercent="98%"
                            android:layout_centerHorizontal="true"
                            android:orientation="vertical">
                            <androidx.percentlayout.widget.PercentRelativeLayout
                                android:id="@+id/svColorPlate"
                                android:layout_width="match_parent"
                                android:layout_height="160dp">
                                <SurfaceView
                                    android:id="@+id/svBeforeCol"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_heightPercent="100%"
                                    app:layout_widthPercent="49%"/>
                                <SurfaceView
                                    android:id="@+id/svAfterCol"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_heightPercent="100%"
                                    app:layout_widthPercent="49%"/>
                            </androidx.percentlayout.widget.PercentRelativeLayout>
                            <RelativeLayout
                                android:id="@+id/llColor"
                                android:layout_marginTop="10dp"
                                android:visibility="visible"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <GridLayout
                                    android:id="@+id/gridlayout"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/plate_border"
                                    android:layout_centerInParent="true"
                                    android:padding="5dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <Button
                                    android:id="@+id/btnSave"
                                    android:layout_centerInParent="true"
                                    android:layout_below="@+id/gridlayout"
                                    android:background="@drawable/button"
                                    android:textStyle="bold"
                                    android:visibility="gone"
                                    android:textColor="#ffffff"
                                    android:layout_width="200dp"
                                    android:layout_height="40dp"
                                    android:text="SAVE" />
                            </RelativeLayout>
                        </LinearLayout>


                    </androidx.percentlayout.widget.PercentRelativeLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>