<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:background="@drawable/virusbar" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@color/reporygrey">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:id="@+id/tvDate"
                android:layout_gravity="center"
                android:text="Dateï¼š2020/5/20"
                android:textSize="18dp" />
        </LinearLayout>
        <View android:layout_height="30dp" android:background="#ffffff" android:layout_width="fill_parent"></View>
        <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:padding="10dp"
            android:background="@color/bgwhite"
             android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:typeface="serif"
                android:textStyle="bold"
                android:text="Patient's Infomation:"
                android:textSize="18dp" />
            <View android:layout_height="1px" android:background="#000000" android:layout_width="fill_parent"></View>
            <View android:layout_height="5dp" android:background="#ffffff" android:layout_width="fill_parent"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:text="Patient's name:"
                    android:textSize="20dp"
                    android:typeface="serif" />

                <EditText
                    android:id="@+id/etPatient"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:textSize="15dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:text="Patient's email:"
                    android:textSize="20dp"
                    android:typeface="serif" />

                <EditText
                    android:id="@+id/etEmail"
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:inputType="textEmailAddress" />
            </LinearLayout>
            <View android:layout_height="10dp" android:background="#efefef" android:layout_width="fill_parent"></View>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="@color/bgwhite"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:typeface="serif"
                android:textStyle="bold"
                android:text="Diagnosis's Infomation:"
                android:textSize="20dp" />
            <View android:layout_height="1px" android:background="#000000" android:layout_width="fill_parent"></View>
            <View android:layout_height="5dp" android:background="#ffffff" android:layout_width="fill_parent"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:id="@+id/tvPbarcode"
                    android:text="Plate's ID:"
                    android:textSize="20dp"
                    android:typeface="serif" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:id="@+id/tvWbarcode"
                    android:text="Well's ID:"
                    android:textSize="20dp"
                    android:typeface="serif" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:text="Assay:SARS-Cov-2:"
                    android:textSize="20dp"
                    android:typeface="serif" />

            </LinearLayout>
            <View android:layout_height="10dp" android:background="#efefef" android:layout_width="fill_parent"></View>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18dp"
                    android:typeface="serif"
                    android:id="@+id/tvResult"
                    android:text="Test Result:"
                    android:textStyle="bold"
                    android:gravity="center"/>
                <RadioGroup
                    android:id="@+id/rg"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <RadioButton
                        android:id="@+id/rbNegative"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:typeface="serif"
                        android:text="Negative"
                        android:textSize="20dp" />
                    <RadioButton
                        android:id="@+id/rbPositive"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:checked="true"
                        android:typeface="serif"
                        android:text="Positive"
                        android:textSize="20dp" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:typeface="serif"
                    android:text="Note:"
                    android:textSize="22dp" />
                <EditText
                    android:id="@+id/etNote"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/bg_edittext"
                    android:gravity="top"
                    android:minLines="10"
                    android:selectAllOnFocus="true"
                    android:textSize="20dp" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:text="Lab's Director:"
                android:textSize="20dp"
                android:typeface="serif" />
            <EditText
                android:id="@+id/etDirector"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnYes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:background="@drawable/button"
                android:textSize="12dp"
                android:text="Send Email" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>